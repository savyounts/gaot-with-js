<h1>sign up for goat.</h1><br>

<div class="wrapper">
  <%= render partial: "error_messages", locals: {instance: @user} %>

  <%= form_for @user do |f| %>
    <%= f.text_field :username, placeholder: "Username" %><br>
    <%= f.text_field :email, placeholder: "Email" %><br>
    <%= f.password_field :password, placeholder: "Password" %><br>
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %><br>
    <%= f.submit "Start Planning" %>
  <% end %>
  <br><br>

  <p> Already have an account? <%= link_to "Login", "/login"%> here or sign up with <%= link_to('Facebook', '/auth/facebook') %>.</p>
</div>
