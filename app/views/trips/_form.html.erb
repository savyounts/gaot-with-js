<%= form_for @trip do |f| %>
  <%= f.hidden_field :user_id, value: @trip.user.id %>
  <%= f.text_field :name, placeholder: "Occasion" %><br><br>
  <%= f.text_field :start_date, placeholder: "Start Date" %><br>
  Destinations: <br>
  <%= f.collection_check_boxes :destination_ids, @trip.destinations, :id, :name %><br>
  <br>
  <%= f.check_box :completed, {}, 1, 0 %>Trip Completed?<br>
  <%= f.submit %>
<% end %>
