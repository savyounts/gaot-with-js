<div class="wrapper">
  <%= form_for @destination do |f| %>
    <%= f.hidden_field :creator_id, value: @destination.creator.id  %>
    <%= f.text_field :name, placeholder: "Destination Name"  %><br>

    <%= f.text_field :city, placeholder: "City"  %><br>

    <%= f.text_field :country, placeholder: "Country"  %><br>

    <%= f.text_area :description, placeholder: "Description"  %><br>

    <%= f.text_area :must_dos, placeholder: "Must Do's"  %><br>

    <%= f.text_area :dont_dos, placeholder: "Don't Do's"  %><br>

    <%= f.text_area :day_trips, placeholder: "Day Trips"  %><br>

    <%= f.text_field :image_url, placeholder: "Upload Image URL"  %><br><br>
    <%= f.submit %>
  <% end %>
</div>
