<%= form_for @destination do |f| %>
  <%= f.hidden_field :creator_id, value: @destination.creator.id  %>
  <%= f.label :name  %><br>
  <%= f.text_field :name  %><br>

  <%= f.label :city  %><br>
  <%= f.text_field :city  %><br>

  <%= f.label :country  %><br>
  <%= f.text_field :country  %><br>

  <%= f.label :description  %><br>
  <%= f.text_area :description  %><br>

  <%= f.label :must_dos, value: "Must Do's"  %><br>
  <%= f.text_area :must_dos  %><br>

  <%= f.label :must_dos, value: "Don't Do's"  %><br>
  <%= f.text_area :dont_dos  %><br>

  <%= f.label :must_dos, value: "Day Trips"  %><br>
  <%= f.text_area :day_trips  %><br>

  <%= f.label :image_url%><br>
  <%= f.text_field :image_url  %><br>
  <%= f.submit %>
<% end %>
